import java.util.*;
import java.util.function.Function;
import java.util.stream.Collectors;
public class News {
    int newsId;
    String postedByUser;
    String commentByUser;
    String comment;
    public News(int newsId, String postedByUser, String commentByUser, String comment){
        super();
        this.newsId =newsId;
        this.postedByUser =postedByUser;
        this.commentByUser =commentByUser;
        this.comment =comment;
    }
}
 class streamdemo {
     public static void main(String[] args) {
         List<News> newsList = Arrays.asList(
                 new News(1, "d", "e", "hello"),
                 new News(2, "r", "z", "welcome"),
                 new News(3, "T", "u", "have a nice day"),
                 new News(4, "f", "m", "good friday")
         );
         System.out.println("\n" + "Stream Fourth Question ouput");
         List<Integer> lst = new ArrayList<>();
         for(Iterator iterator = newsList.iterator(); iterator.hasNext();)  {
             News n = (News) iterator.next();
             lst.add(n.newsId);
         }
         lst.stream().collect(Collectors.groupingBy(Function.identity(), Collectors.counting()))
                 .entrySet()
                 .stream().max(Map.Entry.comparingByValue()).get().getKey();

          System.out.println("News Id:"+"has maximum comment:");
     }
 }
